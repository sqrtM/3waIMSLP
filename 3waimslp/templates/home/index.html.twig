{% extends 'base.html.twig' %}


{% block body %}

    <div class="headerHome text-white text-center p-4 w-100">
        <div class="column containerTitle">
            <h3 class="classicEncyclopedyTitle">
                Classic Encyclopedy
            </h3>
            <hr>
            <h4>
                Découvrez les plus beaux morceaux de la musique classique !
            </h4>
        </div>

        <div class="menuHamburger align-self-center flex justify-end w-25 d-none"><i class="fas fa-solid fa-bars" style="color: #ffffff;"></i></div>
    </div>

<div class="menuResponsive d-none">
    <div class="mt-3 column">
        <p class="mb-2"><a class="text-decoration-none text-white ms-2 mb-2" href="{{ path('app_home') }}">Accueil</a></p>
        {% if app.user %}
            <p class="mb-2"><a class="text-decoration-none text-white  ms-2" href="'{{ path('app_favorites') }}">Favoris <i class="fas fa-heart fa-lg"></i></a></p>
            <a  class="text-decoration-none text-white ms-2" href="{{ path('app_logout') }}">Se Déconnecter</a>
        {% else %}
            <a  class="text-decoration-none text-white ms-2" href="{{ path('app_login') }}">Se Connecter</a>
        {% endif %}
    </div>
</div>

    <div class=" row">
        <div class="sidebarHome mr-4 block">
            <div class="mt-3 column">
            <p><a  class="text-decoration-none mt-4 ms-2 text-white" href="{{ path('app_home') }}">Accueil</a></p>

            {% if app.user %}
            <p class="mt-2 mb-2"><a class="text-decoration-none text-white  ms-2" href="{{ path('app_favorites') }}">Favoris <i class="fas fa-heart fa-lg"></i></a></p>

            <a  class="text-decoration-none text-white ms-2" href="{{ path('app_logout') }}">Se Déconnecter</a>
            {% else %}
                <a  class="text-decoration-none text-white ms-2" href="{{ path('app_login') }}">Se Connecter</a>
            {% endif %}
            </div>
        </div>

        <div class="contentMainSearch column">
            <div class="m-auto">
                    <h4 class="mt-5 text-center">
                        Rechercher un artiste ou une oeuvre !
                    </h4>

                {{ form_start(form, { 'action': path("app_search_results"), 'method': 'GET' }) }}
                    <div class="searchBar mt-3 text-center">
                        {{ form_widget(form.search)}}
                    </div>
                {{ form_end(form) }}
            </div>

            <div class="containerSearchResults m-auto">
                {% include 'home/searchResults.html.twig' %}
            </div>
        </div>



    </div>


{% endblock %}
